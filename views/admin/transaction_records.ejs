<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Pirata+One&display=swap" rel="stylesheet">
    <title>Transactions</title>
    <%-include('../css_js/landing_css')%>
    <%-include('../css_js/admin/admin_css')%>
</head>
<body style="background-color: slategray;">
    <!-- Navigation-->
    <%-include('../sections/admin_nav')%>
    <!-- Page Content -->
    
    <br>
    <div class="container" style="margin-top: 5%;">
        <h1 class="font-weight-light text-center text-lg-left mt-4 mb-0" style="color: white; font-family: 'Pirata One', cursive; letter-spacing: 10px; text-shadow: 2px 6px #272727;">Transaction Records</h1>
        <br><br>

        <div class="card">
            <%if(transactions.length==0){%>
                <div class="card" style="background-color: bisque;">
                    <div class="card-body text-center">You have no recorded transactions</div>
                </div>
            <%}%>
        </div>
        <br>
        <div class="card">
            <table class="table table-sm table-hover align-middle">
                <thead class="table-light">
                  <tr>
                    <th scope="col">Receipt ID</th>
                    <th scope="col">Project</th>
                    <th scope="col">Client</th>
                    <th scope="col">Tattoo</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Details</th>
                  </tr>
                </thead>
                <tbody>
                <%transactions.forEach((transaction)=>{%>
                  <tr>
                    <th scope="row"><%=transaction.receipt_id%></th>
                    <th scope="row"><%=transaction.project_number%></th>
                    <td class="text-center"><%=transaction.client_name%></td>
                    <td class="text-center"><%=transaction.design_id%></td>
                    <td class="text-center"><%=transaction.total_payment%></td>
                    <td class="text-center">
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary btn-floating" data-mdb-toggle="modal" data-mdb-target="#transactionDetails">
                            <i class="fas fa-info"></i>
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="transactionDetails" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Project <%=transaction.project_number%> Session Details</h5>
                                    <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="card">
                                            <table class="table table-sm table-hover align-middle">
                                                <thead class="table-light">
                                                <tr>
                                                    <th scope="col">Session Number</th>
                                                    <th scope="col">Session Date</th>
                                                    <th scope="col">Time Started</th>
                                                    <th scope="col">Time Ended</th>
                                                    <th scope="col">Session Cost</th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                <%tran_seshes.forEach((tran_sesh)=>{%>
                                                    <%if(transaction.project_number==tran_sesh.project_number){%>
                                                    <tr>
                                                        <th scope="row"><%=tran_sesh.session_number%></th>
                                                        <td class="text-center"><%=tran_sesh.sesion_date%></td>
                                                        <td class="text-center"><%=tran_sesh.session_start%></td>
                                                        <td class="text-center"><%=tran_sesh.session_end%></td>
                                                        <td class="text-center"><%=tran_sesh.session_payment%></td>
                                                    </tr>
                                                    <%}%>
                                                <%})%>
                                                </tbody>
                                            </table>
                                        </div> 
                                    </div>
                                    <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-mdb-dismiss="modal">
                                        Close
                                    </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Modal -->
                    </td>
                </tr>
            <%})%>
                </tbody>
            </table>
            
        </div>
    </div>
<%-include('../css_js/landing_js')%>
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fire At Will</title>
    <%-include('../css_js/login_css')%>
</head>
<body style="background-color: slategray;">
    <%-include('../sections/admin_nav')%>
    <div class="container mt-5" >
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header h4">
                        My Appointments
                    </div>
                    <div class="card-body">
                      <div class="alert alert-info">
                        You got no appointments.
                      </div>
                      <table class="table table-hover">
                          <thead>
                              <tr>
                                  <th scope="col">Date Created</th>
                                  <th scope="col">Appointment Date</th>
                                  <th scope="col">Status</th>
                                  <th scope="col">Actions</th>
                              </tr>
                          </thead>
                          <tbody>
                              <%apps.forEach((app)=>{%>
                                <tr>
                                    <td><%=months[app.Date_Created.getMonth()]%> <%=app.Date_Created.getDate()%>, <%=app.Date_Created.getFullYear()%></td>
                                    <td><%=months[app.Appointment_Date.getMonth()]%> <%=app.Appointment_Date.getDate()%>, <%=app.Appointment_Date.getFullYear()%></td>
                                    <td><%=app.Status%></td>
                                    <td>
                                        <button class="btn btn-primary btn-floating" data-mdb-toggle="modal" data-mdb-target="#actions"><i class="fa fa-eye" aria-hidden="true"></i></button>
                                    </td>
                                </tr>
                              <%})%>                           
                          </tbody>
                      </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div
    class="modal fade"
    id="actions"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
    >
        <div class="modal-dialog">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button
                type="button"
                class="btn-close"
                data-mdb-dismiss="modal"
                aria-label="Close"
                ></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="alert alert-info text-center">
                            Appointment Information
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-center">
                        <form action="/admin/appointments" method="POST">                         
                            <%apps.forEach((app)=>{%>
                                <tr>
                                    <td>Date Created:
                                        <%=months[app.Date_Created.getMonth()]%> <%=app.Date_Created.getDate()%>, <%=app.Date_Created.getFullYear()%>
                                    </td><br><br>
                                    <td>Appointment Date: 
                                        <%=months[app.Appointment_Date.getMonth()]%> <%=app.Appointment_Date.getDate()%>, <%=app.Appointment_Date.getFullYear()%>
                                    </td><br><br>
                                    <td>Image Submission Link:
                                        <%=app.Image_Submission%>
                                    </td><br><br>
                                    <td>Purpose:
                                        <%=app.purpose%>
                                    </td><br><br>
                                    <!-- <td><%=app.Status%></td> -->
                                </tr>
                              <%})%>                   
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-mdb-dismiss="modal">
                Close
                </button>
            </div>
            </div>
        </div>
    </div>
    <%-include('../css_js/login_js')%>
</body>
</html>